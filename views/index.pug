extends layout.pug

block content

  article.portfolio-intro

    h1 Full Snack 🍪 Software Engineer
    p Hello 👋🏽 Welcome to my portfolio!

  article.portfolio-project-thumbs
    .projects-box.box.grid
    
      each project in projects

        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`, alt='project start screen')
            h5= project.project_name

